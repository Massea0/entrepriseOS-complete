# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=EntrepriseOS
NEXT_PUBLIC_APP_VERSION=1.0.0

# AI Services Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id

# Google AI (Gemini)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Replicate (for specialized models)
REPLICATE_API_TOKEN=your-replicate-token

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_EMAIL=noreply@entrepriseos.com
SMTP_FROM_NAME=EntrepriseOS

# Storage Configuration
STORAGE_BUCKET_AVATARS=avatars
STORAGE_BUCKET_DOCUMENTS=documents
STORAGE_BUCKET_EXPORTS=exports

# Security Configuration
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret

# Feature Flags (optional overrides)
FEATURE_AI_VOICE=false
FEATURE_AI_PREDICTIONS=true
FEATURE_INVENTORY_MODULE=true
FEATURE_MOBILE_PWA=true

# Analytics & Monitoring
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Third-party Integrations
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_AI_REQUESTS_PER_MINUTE=20

# Development/Production
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Database (for local development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/entrepriseos

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FORMAT=json