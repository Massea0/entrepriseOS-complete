{
  "name": "EntrepriseOS - CRM/ERP SaaS",
  "short_name": "EntrepriseOS",
  "description": "Le CRM/ERP SaaS le plus avancé du marché avec IA intégrée",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait",
  "theme_color": "#000000",
  "background_color": "#ffffff",
  "categories": ["business", "productivity"],
  "lang": "fr",
  "dir": "ltr",
  "scope": "/",
  "id": "com.enterpriseos.app",
  
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  
  "screenshots": [
    {
      "src": "/screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Dashboard principal"
    },
    {
      "src": "/screenshots/projects.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Gestion de projets"
    },
    {
      "src": "/screenshots/mobile.png",
      "sizes": "360x640",
      "type": "image/png",
      "label": "Vue mobile"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "url": "/dashboard",
      "description": "Accès rapide au tableau de bord",
      "icons": [
        {
          "src": "/icons/dashboard.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Projets",
      "url": "/projects",
      "description": "Gestion des projets",
      "icons": [
        {
          "src": "/icons/projects.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Factures",
      "url": "/finance/invoices",
      "description": "Gestion des factures",
      "icons": [
        {
          "src": "/icons/invoices.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://app.enterpriseos.com/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "offline capable"
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/*",
            "application/pdf",
            ".csv",
            ".xlsx"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+enterpriseos",
      "url": "/protocol?url=%s"
    }
  ]
}